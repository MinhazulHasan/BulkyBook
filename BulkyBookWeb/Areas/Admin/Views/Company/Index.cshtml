@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary fw-bold">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" asp-controller="Company" class="btn btn-primary bi bi-plus-circle"> Create New Company</a>
        </div>
    </div>

    <br />

    <table id="tblTable" class="table table-bordered table-striped table-hover mt-3" width="100%">
        <thead class="table-primary">
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone Number</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
    </table>

</div>

@section Scripts
{
    <script src="~/js/company.js"></script>
}