
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary fw-bold">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" asp-controller="Product" class="btn btn-primary bi bi-plus-circle"> Create New Product</a>
        </div>
    </div>

    <br />

    <table id="tblTable" class="table table-bordered table-striped table-hover mt-3" width="100%">
        <thead class="table-primary">
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
    </table>

</div>

@section Scripts
{
    <script src="~/js/product.js"></script>
}