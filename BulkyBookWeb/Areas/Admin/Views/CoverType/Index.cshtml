@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary fw-bold">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="CoverType" class="btn btn-primary bi bi-plus-circle"> Create New CoverType</a>
        </div>
    </div>

    <br />

    <table class="table table-bordered table-striped table-hover mt-3" width="100%">
        <thead>
            <tr>
                <th>Cover Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="70%">@obj.Name</td>
                    <td>
                        <a class="btn btn-warning bi bi-pencil-square" asp-action="Edit" asp-controller="CoverType" asp-route-id="@obj.Id"> Edit</a>
                        <a class="btn btn-danger bi bi-trash-fill" asp-action="Delete" asp-controller="CoverType" asp-route-id="@obj.Id"> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

