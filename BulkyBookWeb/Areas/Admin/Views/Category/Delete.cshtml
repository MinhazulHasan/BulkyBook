@model Category
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary fw-bold">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" placeholder="Enter Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">DisplayOrder</label>
            <input asp-for="DisplayOrder" placeholder="Enter Display Order" class="form-control" disabled />
        </div>

        <input asp-for="Id" hidden />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-controller="Category" class="btn btn-info">Back To List</a>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
