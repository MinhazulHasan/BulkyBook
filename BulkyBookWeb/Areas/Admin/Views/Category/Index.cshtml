@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary fw-bold">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary bi bi-plus-circle"> Create New Category</a>
        </div>
    </div>

    <br />

    <table class="table table-bordered table-striped table-hover mt-3" width="100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="40%">@obj.Name</td>
                <td width="30%">@obj.DisplayOrder</td>
                <td>
                    <a class="btn btn-warning bi bi-pencil-square" asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id"> Edit</a>
                    <a class="btn btn-danger bi bi-trash-fill" asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id"> Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>